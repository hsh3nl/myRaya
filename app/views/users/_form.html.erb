<%= form_with model:@user, local: true  do |form| %>
  <p>
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name %>
  </p>

  <p>
    <%= form.label :last_name %><br>
    <%= form.text_field :last_name %>
  </p>

  <p>
    <%= form.label :gender %><br>
    <%= form.text_field :gender %>
  </p>  

  <p>
    <%= form.label :contact_number %><br>
    <%= form.text_field :tel_no %>
  </p>  

  <p>
    <%= form.label :email_address %><br>
    <%= form.text_field :email %>
  </p>    

  <p>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </p>  

  <p>
    <%= form.label :retype_password %><br>
    <%= form.password_field :password_confirmation %>
  </p>

  <p>
    <%= form.label :image %>
    <%= form.file_field :image %>
  </p>
  <% if @user.image? %>
    <%= image_tag @user.image.thumb.url %>
    <div>
      <%= label_tag :remove_image do %>
        Remove image
        <%= form.check_box :remove_image %>
      <% end %>
    </div>
  <% end %>
 
  <p>
    <%= form.submit 'Submit', class:' btn btn-sm btn-outline-success'%>
  </p>
<% end %>