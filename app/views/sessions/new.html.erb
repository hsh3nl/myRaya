<div class="container d-flex justify-content-center align-items-center bg-light rounded col-5" id='login-container'>
      <div class="row col d-flex justify-content-center align-items-center pt-4 pb-3">
          <div class="col pb-1 d-flex justify-content-center">
              <img src=<%=image_url('logo.png')%> width="100" height="100" class="d-inline-block align-top" alt="">
          </div>
          
        <div class="w-100 "></div>
          
          myRaya Members 
          
        <div class="w-100 mb-2 "></div>
          
          <div class="input-group mb-3 d-flex justify-content-center">
            <div class="input-group-prepend">
              <span class="input-group-text form-control-sm" id="basic-addon1"><i class="fas fa-user-circle"></i></span>
            </div>
            <%= form_with scope: :user, local: true  do |form| %>
            <%= form.text_field :email, class:"form-control-sm", placeholder:"Email" %>
          </div>
        
        <div class="w-100 "></div>
          <div class="input-group mb-3 d-flex justify-content-center">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1"><i class="fas fa-lock"></i></span>
            </div>
            <%= form.password_field :password, class:"form-control-sm", placeholder:"Password" %>
          </div>

          <%= form.submit 'Sign In', class:' btn btn-sm btn-outline-success col-10', id:'pink-btn'%>
          <% end %>
        </div>
        


    </div>


 

